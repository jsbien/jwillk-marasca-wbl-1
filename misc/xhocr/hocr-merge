'''
hocr-merge takes two or more hOCR files for the same page, and merges them into
one, including words with the highest confidence.

Only hOCR files generated by Tesseract >= 3.02 are supported.
'''

# Utility suggested by Janusz S. Bień

import argparse
import sys

from lxml import etree

import hocr

def main():
    ap = argparse.ArgumentParser(description=__doc__.strip())
    ap.add_argument('files', metavar='HOCR-FILE', nargs='+', help='hOCR files to merge')
    ap.add_argument('--fix-lang', action='store_true', help='fix "lang" attributes to follow BCP 47')
    ap.add_argument('--uax29', action='store_true', help='split words using the UAX#29 algorithm')
    options = ap.parse_args()
    trees = []
    for path in options.files:
        trees += [etree.parse(path)]
    merger = hocr.Merger(options)
    try:
        root = merger.merge([t.getroot() for t in trees])
    except hocr.MergeError:
        sys.exit(1)
    tree = root.getroottree()
    tree.write(sys.stdout, encoding='utf-8')

if __name__ == '__main__':
    main()

# vim:ts=4 sw=4 et
